{
  "compilerOptions": {
    "module": "esnext",
    "target": "es5",
    "esModuleInterop": true,
    "lib": [
      "ESNext",
      "DOM"
    ],
    "noImplicitAny": false,
    "types": [
      "jest"
    ],
    "noEmit": true,
    "sourceMap": true,
    "outDir": "lib",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.js",
    "src/**/*.jsx",
    "spec/**/*.ts",
    "spec/**/*.js"
  ]
}
